<li class="calendar-item list-group-item list-group-item-warning <%= 'active' if active %>" data-toggle="popover" data-content="<%= "<dl class='dl-horizontal'><dt>JO#</dt><dd>#{job_date.serial}</dd><dt>Released</dt><dd>#{job_date.job_order.date_of("released", "planned")} <span class='badge'>#{job_date.quantity}</span></dd><dt>QC</dt><dd>#{job_date.job_order.date_of("QC", "planned")}</dd></dl>" %>" data-trigger="hover" data-html="true">
  <div class="clearfix">
    <strong class="pull-left <%= "text-danger" if job_date.job_order.rush? %>"><%= job_date.part_number %></strong>
  </div>
  <div class="clearfix">
    <span class="pull-left"><%= job_date.run_number %></span>
    <%= step_icon(job_date.display_step) %>
  </div>
</li>
