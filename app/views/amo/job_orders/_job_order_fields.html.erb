<%= f.text_field :serial, label: "Job Order #" %>
<%= f.text_field :part_number, label: "Part #" %>
<%= f.text_field :run_number, label: "Run #" %>
<%= f.text_field :quantity %>
<%= f.text_field :priority %>
<%= f.text_area :note %>

<hr>

<% @job_dates.each_with_index do |job_date, i| %>
  <fieldset>
    <%= f.fields_for "job_dates[#{i}]", job_date do |jdf| %>
      <%= render "shared/date_field", f: jdf, name: :value, label: jdf.object.step %>
      <div class="col-md-8 col-md-offset-2 checkbox">
        <label>
          <%= jdf.check_box :completed %>
        </label>
      </div>
      <%= jdf.hidden_field :step %>
    <% end %>
  </fieldset>
<% end %>
