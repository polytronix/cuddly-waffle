<%= form_tag area_shipped_chart_path, method: :get, class: 'form-inline search' do %>
  <div class="row">
    <%= render 'shared/date_range_fields' %>
    <%= submit_tag "Search", name: nil, class: "btn btn-default col-md-1" %>
  </div>
<% end %>

<script>
  $(function () {
    $('#area_shipped').highcharts({
      chart: {
        type: 'area',
        zoomType: 'x'
      },
      title: {
        text: 'Area of film and glass shipped by date'
      },
      xAxis: {
        type: 'datetime'
      },
      yAxis: {
        min: 0,
        title: {
          text: 'Area'
        }
      },
      tooltip: {
        shared: true
      },
      plotOptions: {
        area: {
          stacking: 'normal'
        }
      },
      series: [
      {
        name: 'Film',
        data: [
        <% @film_area_shipped_by_date.each do |point| %>
          [<%= point[0].to_datetime.to_i*1000 %>, <%= point[1] %>],
        <% end %>
        ]
        }, {
        name: 'Glass',
        data: [
        <% @glass_area_shipped_by_date.each do |point| %>
          [<%= point[0].to_datetime.to_i*1000 %>, <%= point[1] %>],
        <% end %>
        ]
        } , {
        type: 'pie',
        name: 'Total shipped',
        data: [{
          name: 'Film',
          y: <%= @total_film_area_shipped %>,
          color: Highcharts.getOptions().colors[0]
          }, {
          name: 'Glass',
          y: <%= @total_glass_area_shipped %>,
          color: Highcharts.getOptions().colors[1]
        }],
        center: [70, 70],
        size: 100,
        showInLegend: false,
        dataLabels: {
          enabled: false
        }
      }]
    });
  });
</script>
<div id="area_shipped" class="chart"></div>
