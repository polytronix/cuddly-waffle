<script>
  $(function () {
    $('#daily-fg-movement').highcharts({
      chart: {
        type: 'area',
        zoomType: 'x'
      },
      title: {
        text: 'Daily FG movement'
      },
      xAxis: {
        type: 'datetime'
      },
      yAxis: [
        {
          min: 0,
          title: {
            text: 'SQFT'
          }
        },
        { 
          title: {
            text: 'Count'
          },
          min: 0
        }
      ],
      plotOptions: {
        area: {
          lineWidth: 1,
          marker: {
            enabled: false
          },
          shadow: false,
          states: {
            hover: {
              lineWidth: 1
            }
          },
          threshold: null,
          fillOpacity: 0.5
        }
      },
      tooltip: {
        shared: true
      },
      series: [
        {
          yAxis: 0,
          name: 'SQFT',
          data: [
          <% @sf_data.each do |point| %>
            [<%= point[0].to_time.to_i*1000 %>, <%= point[1] %>],
          <% end %>
          ]
        },
        {
          yAxis: 1,
          name: 'Count',
          data: [
          <% @count_data.each do |point| %>
            [<%= point[0].to_time.to_i*1000 %>, <%= point[1] %>],
          <% end %>
          ]
        }
      ]
    });
  });
</script>
<div id="daily-fg-movement" class="chart"></div>
