<%= simple_form_for @master_film, url: films_path, remote: true, html: { class: 'form-horizontal modal-form' } do |f| %>
  <h3 class="text-center">Enter film</h3>
  <%= f.input :serial %>
  <%= f.input :formula %>
  <%= f.input :mix_mass %>
  <%= f.input :machine_id, collection: Machine.all, label_method: :code, value_method: :id %>
  <%= f.input :film_code %>
  <%= f.input :thinky_code %>
  <%= f.input :chemist_id, collection: User.chemists, label_method: :name, value_method: :id %>
  <%= f.input :operator_id, collection: User.operators, label_method: :name, value_method: :id %>
  <div class="form-actions">
    <%= f.button :submit, "Add film", class: "btn btn-success" %>
    <button type="button" class="btn" data-dismiss="modal">Cancel</button>
  </div>
<% end %>
