<fieldset class="form-group solder-height-fields">
  <%= label_tag "Solder heights", nil, class: "control-label col-md-2" %>
  <div class="col-md-4">
    <%= f.number_field :height1, placeholder: "Height 1", step: "any", default: true %>
  </div>
  <div class="col-md-4">
    <%= f.number_field :height2, placeholder: "Height 2", step: "any", default: true %>
  </div>
  <%= f.hidden_field :_destroy %>
  <%= link_to '#', class: "remove-fields" do %>
    <i class="fa fa-minus"></i>remove
  <% end %>
</fieldset>
