<% if @film.errors.any? %>
  $("<%= "#edit_film_#{@film.id}" %> .error-messages").remove();
  $("<%= "#edit_film_#{@film.id}" %>").prepend("<%= j render "shared/error_messages", object:
                                @film %>");
<% else %>
  $('#film-actions-modal').modal('hide');
  $("<%= "#film-#{@film.id}" %>").replaceWith("<%= j render 'film', film: @film, row_class: "info" %>");
  <% @splits.reverse.each do |split| %>
    $("<%= "#film-#{@film.id}" %>").after("<%= j render 'film', film: split, row_class: "success" %>");
  <% end %>
<% end %>
