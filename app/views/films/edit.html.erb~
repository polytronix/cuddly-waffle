<h3 class="text-center"><%= @film.serial %></h3>
<%= simple_form_for @film, remote: true, html: { class: 'form-horizontal modal-form' } do |f| %>
  <%= edit_fields_for @film.phase, f %>
  <%= f.input :reserved_for, as: :string %>
  <%= f.input :note, input_html: { rows: 3 } %>
  <%= render("defects_fieldset", f: f) if @film.phase == "inspection" %>
  <%= f.input :destination, collection: @film.valid_destinations, include_blank: true, label: "Move to" %>
  <%= render "movement_fieldsets", f:f %>
  <div class="form-actions">
    <%= f.button :submit, "Update", class: "btn btn-success" %>
    <button type="button" class="btn" data-dismiss="modal">Cancel</button>
  </div>
<% end %>
