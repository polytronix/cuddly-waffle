<%= form_tag update_multiple_films_path, method: :put, html: { class: 'form-horizontal' } do %>
  <ul>
    <% @films.each do |film| %>
      <li>
        <%= hidden_field_tag "film_ids[]", film.id %>
        <%= film.serial %>
      </li>
    <% end %>
  </ul>
  <%= fields_for :film do |f| %>
    <%= f.select :phase, @valid_destinations, include_blank: true, label: "Move to:" %>
  <% end %>
  <div class="form-actions"><%= submit_tag "Move all", class: "btn btn-success" %></div>
<% end %>

