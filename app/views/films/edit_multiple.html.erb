<%= modal_form_for :film, url: update_multiple_films_path, method: :patch do |f| %>
  <div class="modal-header">
    <ul class="list-inline">
      <% @films.each do |film| %>
        <li>
        <%= hidden_field_tag "film_ids[]", film.id %>
        <h4><%= film.serial %></h4>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="modal-body">
    <%= f.text_field :shelf, class: "form-control" %>
    <%= f.collection_select :sales_order_id, SalesOrder.unshipped, :id, :code, { include_blank: true }, class: "form-control" %>
    <% if current_user.is_supervisor? %>
      <%= f.select :destination, @films.map{ |f| Phase.new(f.phase) }.uniq.map(&:valid_destinations).reduce(:&), { prompt: "Move to..." }, { class: "form-control", label: false } %>
    <% end %>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    <%= submit_tag "Move all", class: "btn btn-success" %>
  </div>
<% end %>
