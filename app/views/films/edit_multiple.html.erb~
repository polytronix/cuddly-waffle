<%= simple_form_for :film, url: update_multiple_films_path, method: :put, remote: true, html: { class: 'form-horizontal modal-form' } do |f| %>
  <ul>
    <% @films.each do |film| %>
      <li>
        <%= hidden_field_tag "film_ids[]", film.id %>
        <h4><%= film.serial %></h4>
      </li>
    <% end %>
  </ul>
  <%= f.input :destination, collection: @valid_destinations, include_blank: true, label: "Move to" %>
  <div class="form-actions">
    <%= submit_tag "Move all", class: "btn btn-success" %>
    <button type="button" class="btn" data-dismiss="modal">Cancel</button>
  </div>
<% end %>
