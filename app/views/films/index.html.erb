<%= render 'search_form' %>
<span>
  Count: <strong><%= @films_presenter.total_count %></strong>
  Area: <strong><%= @films_presenter.total_area %></strong>
</span>

<%= form_tag edit_multiple_films_path, id: "get-edit-multiple", method: :get, remote: true do %>
  <%= submit_tag "Move selected", id: "films-edit-multiple", class: "btn btn-default", disabled: 'disabled' %>
  <%= link_to_export(method(:films_path), params) %>

  <%= paginate films %>

  <% content_for :table_header do %>
    <tr>
      <th></th>
      <th></th>
      <th><%= sort_link 'films.serial', "Serial" %></th>
      <th>Width</th>
      <th>Length</th>
      <th><%= sort_link 'area' %></th>
      <th><%= sort_link 'shelf' %></th>
      <th>SO</th>
      <th><%= sort_link 'note' %></th>
    </tr>
  <% end %>

  <% content_for :table_body do %>
    <%= render films %>
  <% end %>

  <%= render "shared/table" %>
<% end %>
