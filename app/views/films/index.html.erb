<%= form_tag edit_multiple_films_path, id: "get-edit-multiple", method: :get, remote: true do %>
  <%= submit_tag "Move selected", id: "films-edit-multiple", class: "btn btn-default", disabled: 'disabled' %>
  <%= link_to_export("Films", params) %>

  <%= paginate @films %>

  <div class="btn-group">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
      Sort: <strong><%= sort[0].humanize %> <i class="fa fa-long-arrow-<%= sort[1] == 'asc' ? 'up' : 'down' %>"></i></strong> 
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <li class="<%= "active" if params[:sort] == 'serial_asc' %>">
        <%= link_to url_for(params.merge(sort: 'serial_desc')) do %>
          Serial <i class="fa fa-long-arrow-down"></i>
        <% end %>
      </li>
      <li class="<%= "active" if params[:sort] == 'area_asc' %>">
        <%= link_to url_for(params.merge(sort: 'area_asc')) do %>
          Area <i class="fa fa-long-arrow-up"></i>
        <% end %>
      </li>
      <li class="<%= "active" if params[:sort] == 'shelf_asc' %>">
        <%= link_to url_for(params.merge(sort: 'shelf_asc')) do %>
          Shelf <i class="fa fa-long-arrow-up"></i>
        <% end %>
      </li>
    </ul>
  </div>

  <table class="table table-condensed table-hover">
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th>Serial</th>
        <th>Width</th>
        <th>Length</th>
        <th>Area</th>
        <th>Shelf</th>
        <th>SO</th>
        <th>Note</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <%= render @films %>
    </tbody>
  </table>
<% end %>
