<%= render 'search_form' %>

<%= form_tag edit_multiple_films_path, id: "get-edit-multiple", method: :get, remote: true do %>
  <%= submit_tag "Move selected", id: "film-edit-multiple", class: "btn btn-default", disabled: 'disabled' %>
  <%= link_to "Export", films_path(scope: params[:scope], query: params[:query], :'min-width' => params[:"min-width"], :'min-length' => params[:"min-length"], :'max-width' => params[:"max-width"], :'max-length' => params[:"max-length"], format: "csv"), id: "master-films-export", class: "btn btn-default" %>
  <span>Count: <strong><%= @count %></strong></span>
  <span>Area: <strong><%= @total_area %></strong></span>

  <%= paginate @films %>

  <% content_for :table_header do %>
    <tr>
      <th></th>
      <th></th>
      <th>Serial</th>
      <%= column_headers(params[:scope], @films.first.phase) unless @films.empty? %>
      <th>Note</th>
    </tr>
  <% end %>

  <% content_for :table_body do %>
    <%= render @films %>
  <% end %>

  <%= render "shared/table" %>
<% end %>
