<h1>Split</h1>
<%= labeled_form_for @film, html: { class: 'form-horizontal' } do |f| %>
  <fieldset class="<%= "division-" + @film.division.to_s + "-fields" %>">
    <legend><%= @film.serial %></legend>
    <%= f.number_field :width %>
    <%= f.number_field :length %>
  </fieldset>
  <%= f.fields_for :master_film do |mff| %>
    <%= mff.fields_for :films do |ff|%>
      <% if ff.object.new_record? %>
        <%= render 'film_fields', f: ff %>
      <% end %>
    <% end %>
  <% end %>
  <div class="form-actions"><%= f.submit "Split", class: "btn btn-success" %></div>
<% end %>
