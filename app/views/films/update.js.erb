<% if @film.errors.any? %>
  $('form .error-messages').remove();
  $('form').prepend("<%= j render 'shared/error_messages', object:
                                @film %>");
<% else %>
  $('#film-actions-modal').modal('hide')
  $("<%= "tr#film-#{@film.id}" %>").replaceWith("<%= j render 'film', film:
                                @film, edited: true  %>")
<% end %>

