<%= render layout: 'shared/modal_form_submit', locals: { object: @film } do %>
  <% if params[:film][:deleted] == '1' %>
    $("<%= "#film-#{@film.id}" %>").replaceWith("<%= j render 'moved_film', film: @film, destination: "deleted" %>");
  <% elsif params[:film][:destination].present? %>
    $("<%= "#film-#{@film.id}" %>").replaceWith("<%= j render 'moved_film', film: @film, destination: @film.phase %>");
  <% else %>
    $("<%= "#film-#{@film.id}" %>").replaceWith("<%= j render 'film', film: @film, row_class: "info" %>");
  <% end %>
<% end %>
