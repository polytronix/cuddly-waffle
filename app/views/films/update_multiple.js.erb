$('#forms-modal').modal('hide');
<% @films.each do |film| %>
  var film_row = $("<%= "#film-#{film.id}" %>")
  <% if film.moved? %>
    film_row.replaceWith("<%= j render 'moved_film', film: film %>");
  <% else %>
    film_row.replaceWith("<%= j render 'film', film: film %>");
    $(film_row.selector).addClass("info")
  <% end %>
<% end %>
