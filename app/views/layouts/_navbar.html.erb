    <li class="<%= 'active' if params[:controller] == 'films' %>"><%= link_to "Production", films_path(tab: "lamination") %></li>
    <li class="<%= 'active' if params[:controller] == 'master_films' %>"><%= link_to "Engineering", master_films_path(status: 'uninspected') %></li>
