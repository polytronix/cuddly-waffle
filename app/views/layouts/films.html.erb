<% provide :title, "Production" %>

<% content_for :nav_list do %>
  <%= link_to "Lamination", films_path(phase: 'lamination'), class: "list-group-item#{" active" if params[:phase] == 'lamination'}" %>
  <%= link_to "Inspection", films_path(phase: 'inspection'), class: "list-group-item#{" active" if params[:phase] == 'inspection'}" %>
  <%= link_to films_path(phase: 'large_stock'), class: "list-group-item#{" active" if params[:phase] == 'large_stock'}" do %>
    <i class="fa fa-stack-overflow fa-lg"></i> Available
  <% end %>
  <%= link_to films_path(phase: 'small_stock'), class: "list-group-item#{" active" if params[:phase] == 'small_stock'}" do %>
    <i class="fa fa-stack-overflow fa-lg"></i> Small
  <% end %>
  <%= link_to films_path(phase: 'reserved'), class: "list-group-item#{" active" if params[:phase] == 'reserved'}" do %>
    <i class="fa fa-stack-overflow fa-lg"></i> Reserved
  <% end %>
  <%= link_to "WIP", films_path(phase: 'wip'), class: "list-group-item#{" active" if params[:phase] == 'wip'}" %>
  <%= link_to "FG", films_path(phase: 'fg'), class: "list-group-item#{" active" if params[:phase] == 'fg'}" %>
  <%= link_to films_path(phase: 'nc'), class: "list-group-item#{" active" if params[:phase] == 'nc'}" do %>
    NC<span class="badge"><%= tenant_films.phase('nc').count %></span>
  <% end %>
  <%= link_to "Scrap", films_path(phase: 'scrap'), class: "list-group-item#{" active" if params[:phase] == 'scrap'}" %>
  <% if current_user.admin? %>
    <%= link_to films_path(phase: 'deleted'), class: "list-group-item#{" active" if params[:phase] == 'deleted'}" do %>
    <i class="fa fa-trash-o fa-lg"></i> Deleted
    <% end %>
  <% end %>
<% end %>

<% content_for :page_head do %>
  <div class="row">
    <div class="col-md-5 search">
      <%= render 'search_form' %>
    </div>

    <div class="col-md-5 col-md-offset-2 summary">
      <dl class="dl-horizontal pull-right">
        <dt>Pieces</dt>
        <dd><%= filtered_films.count(:all) %></dd>
        <dt>Area</dt>
        <dd><%= filtered_films.total_area %></dd>
      </dl>
    </div>
  </div>

  <ul class="nav nav-tabs">
    <li class="<%= "active" if params[:action] == 'index' %>"><%= link_to "Index", url_for(params.merge(action: 'index')) %></li>
    <li class="<%= "active" if params[:action] == 'formula_totals' %>"><%= link_to "Formula totals", url_for(params.merge(action: 'formula_totals')) %></li>
    <li class="<%= "active" if params[:action] == 'dimensions_map' %>"><%= link_to "Dimensions map", url_for(params.merge(action: 'dimensions_map')) %></li>
    <li class="<%= "active" if params[:action] == 'shelf_inventory' %>"><%= link_to "Shelves", url_for(params.merge(action: 'shelf_inventory')) %></li>
  </ul>
<% end %>

<%= render template: "layouts/application" %>
