<% provide :title, "Production" %>

<% content_for :nav_list do %>
  <%= link_to "Lamination", films_path(phase: 'lamination'), class: "list-group-item#{" active" if params[:phase] == 'lamination'}" %>
  <%= link_to "Inspection", films_path(phase: 'inspection'), class: "list-group-item#{" active" if params[:phase] == 'inspection'}" %>
  <%= link_to films_path(phase: 'large_stock'), class: "list-group-item#{" active" if params[:phase] == 'large_stock'}" do %>
    <i class="fa fa-stack-overflow fa-lg"></i> Available
  <% end %>
  <%= link_to films_path(phase: 'small_stock'), class: "list-group-item#{" active" if params[:phase] == 'small_stock'}" do %>
    <i class="fa fa-stack-overflow fa-lg"></i> Small
  <% end %>
  <%= link_to films_path(phase: 'reserved_stock'), class: "list-group-item#{" active" if params[:phase] == 'reserved_stock'}" do %>
    <i class="fa fa-stack-overflow fa-lg"></i> Reserved
  <% end %>
  <%= link_to "WIP", films_path(phase: 'wip'), class: "list-group-item#{" active" if params[:phase] == 'wip'}" %>
  <%= link_to "FG", films_path(phase: 'fg'), class: "list-group-item#{" active" if params[:phase] == 'fg'}" %>
  <%= link_to "Test", films_path(phase: 'test'), class: "list-group-item#{" active" if params[:phase] == 'test'}" %>
  <%= link_to "NC", films_path(phase: 'nc'), class: "list-group-item#{" active" if params[:phase] == 'nc'}" %>
  <%= link_to "Scrap", films_path(phase: 'scrap'), class: "list-group-item#{" active" if params[:phase] == 'scrap'}" %>
  <% if current_user.is_admin? %>
    <%= link_to films_path(phase: 'deleted'), class: "list-group-item#{" active" if params[:phase] == 'deleted'}" do %>
    <i class="fa fa-trash-o fa-lg"></i> Deleted
    <% end %>
  <% end %>
<% end %>

<%= render template: "layouts/application" %>
