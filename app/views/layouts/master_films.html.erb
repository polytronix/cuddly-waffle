<% provide :title, "Engineering" %>

<% content_for :nav_list do %>
  <%= link_to "Production", master_films_path(function: 'production'), class: "list-group-item#{" active" if params[:function] == 'production'}" %>
  <%= link_to "Test", master_films_path(function: 'test'), class: "list-group-item #{" active" if params[:function] == 'test'}" %>
  <%= link_to "Transfer", master_films_path(function: 'transfer'), class: "list-group-item#{" active" if params[:function] == 'transfer'}" %>
<% end %>

<% content_for :page_head do %>
  <div class="row">
    <div class="col-md-5 search">
      <%= render 'search_form' %>
    </div>

    <div class="col-md-5 col-md-offset-2 summary">
      <dl class="dl-horizontal pull-right">
        <dt>Count</dt>
        <dd><%= filtered_master_films.count(:all) %></dd>
        <dt>Effective Area</dt>
        <dd><%= number_with_precision(filtered_master_films.total_effective_area, precision: 2) %></dd>
      </dl>
    </div>
  </div>
<% end %>

<%= render template: "layouts/application" %>
