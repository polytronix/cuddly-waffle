<% provide :title, "Engineering" %>

<% content_for :nav_list do %>
  <%= sidebar_link_to(:function, 'production') { "Production" } %>
  <%= sidebar_link_to(:function, 'test') { "Test" } %>
  <%= sidebar_link_to(:function, 'transfer') { "Transfer" } %>
<% end %>

<% content_for :search do %>
  <%= render 'search_form' %>
<% end %>

<% content_for :summary do %>
  <dl class="dl-horizontal pull-right">
    <dt>Count</dt>
    <dd><%= filtered_master_films.count(:all) %></dd>
    <dt>Effective Area</dt>
    <dd><%= number_with_precision(filtered_master_films.total_effective_area, precision: 2) %></dd>
  </dl>
<% end %>

<%= render template: "layouts/application" %>
