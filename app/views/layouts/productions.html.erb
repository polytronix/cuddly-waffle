<% provide :title, "Production" %>

<% content_for :nav_list do %>
  <%= link_to "Daily", productions_path(grouping: 'by_day'), class: "list-group-item#{" active" if params[:grouping] == 'by_day'}" %>
  <%= link_to "Weekly", productions_path(grouping: 'by_week'), class: "list-group-item#{" active" if params[:grouping] == 'by_week'}" %>
  <%= link_to "Monthly", productions_path(grouping: 'by_month'), class: "list-group-item#{" active" if params[:grouping] == 'by_month'}" %>
  <%= link_to "Quarterly", productions_path(grouping: 'by_quarter'), class: "list-group-item#{" active" if params[:grouping] == 'by_quarter'}" %>
<% end %>

<% content_for :page_head do %>
  <%= form_tag url_for, method: :get, class: 'form-inline search-form' do %>
    <div class="form-group">
      <%= text_field_tag :serial_date_after, params[:serial_date_after], placeholder: "Start date", class: "form-control bootstrap-datepicker" %>
    </div>
    <div class="form-group">
      <%= text_field_tag :serial_date_before, params[:serial_date_before], placeholder: "End date", class: "form-control bootstrap-datepicker" %>
    </div>
    <%= hidden_field_tag :grouping, params[:grouping] %>
    <%= submit_tag "Search", name: nil, class: "btn btn-default" %>
  <% end %>
  <ul class="nav nav-tabs">
    <li class="<%= "active" if params[:action] == 'index' %>"><%= link_to "Index", url_for(params.merge(action: 'index')) %></li>
    <li class="<%= "active" if params[:action] == 'yield_time_series' %>"><%= link_to "Yield", url_for(params.merge(action: 'yield_time_series')) %></li>
  </ul>
<% end %>

<%= render template: "layouts/application" %>
