<% provide :title, "Shipments" %>

<% content_for :nav_list do %>
  <%= link_to "Daily", shipments_path(grouping: 'by_day'), class: "list-group-item#{" active" if params[:grouping] == 'by_day'}" %>
  <%= link_to "Weekly", shipments_path(grouping: 'by_week'), class: "list-group-item#{" active" if params[:grouping] == 'by_week'}" %>
  <%= link_to "Monthly", shipments_path(grouping: 'by_month'), class: "list-group-item#{" active" if params[:grouping] == 'by_month'}" %>
  <%= link_to "Quarterly", shipments_path(grouping: 'by_quarter'), class: "list-group-item#{" active" if params[:grouping] == 'by_quarter'}" %>
<% end %>

<% content_for :page_head do %>
  <%= render 'search_form' %>
  <ul class="nav nav-tabs">
    <li class="<%= "active" if params[:action] == 'index' %>"><%= link_to "Index", url_for(params.merge(action: 'index')) %></li>
    <li class="<%= "active" if params[:action] == 'utilization_time_series' %>"><%= link_to "Utilization", url_for(params.merge(action: 'utilization_time_series')) %></li>
    <li class="<%= "active" if params[:action] == 'shipped_area_time_series' %>"><%= link_to "Shipped area", url_for(params.merge(action: 'shipped_area_time_series')) %></li>
  </ul>
<% end %>

<%= render template: "layouts/application" %>
