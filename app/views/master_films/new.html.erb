<h1>New Master Film</h1>
<%= labeled_form_for @master_film, html: { class: 'form-horizontal' } do |f| %>
  <%= f.error_messages %>
  <%= f.text_field :date_code %>
  <%= f.number_field :number %>
  <%= f.text_field :formula %>
  <%= f.number_field :mix_mass %>
  <%= f.collection_select :machine_id, Machine.all, :id, :code %>
  <%= f.text_field :film_code %>
  <%= f.text_field :thinky_code %>
  <%= f.collection_select :chemist_id, User.chemists, :id, :name %>
  <%= f.collection_select :operator_id, User.operators, :id, :name %>
  <div class="form-actions"><%= f.submit "Create Master Film", class: "btn btn-success" %></div>
<% end %>
