<%= render layout: 'shared/modal_form_submit', locals: { object: master_film } do %>
  var master_film_row = $("<%= "#masterfilm-#{master_film.id}" %>")
  $(master_film_row).replaceWith("<%= j render 'master_film', master_film: master_film %>");
  $(master_film_row.selector).addClass("info")
<% end %>
