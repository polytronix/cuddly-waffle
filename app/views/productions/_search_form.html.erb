<%= form_tag url_for, method: :get, class: 'form-horizontal search-form' do %>
  <%= hidden_field_tag :grouping, params[:grouping] %>
<div class="form-group">
  <div class="col-md-5">
    <%= text_field_tag :serial_date_after, params[:serial_date_after], placeholder: "Start date", class: "form-control bootstrap-datepicker" %>
  </div>
  <div class="col-md-5">
    <%= text_field_tag :serial_date_before, params[:serial_date_before], placeholder: "End date", class: "form-control bootstrap-datepicker" %>
  </div>
  <%= submit_tag "Search", name: nil, class: "btn btn-default col-md-2" %>
</div>
<div class="form-group">
  <%= label_tag :formula_like, "Formula", class: "control-label" %>
  <div class="col-md-12">
    <%= text_field_tag :formula_like, params[:formula_like], class: "form-control" %>
  </div>
</div>
<% end %>
