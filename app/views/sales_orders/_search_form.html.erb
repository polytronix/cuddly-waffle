<%= form_tag sales_orders_path, method: :get, class: 'form-inline search' do %>
  <div class="row">
    <div class="form-group col-md-1">
      <%= text_field_tag :text_search, params[:text_search], placeholder: "Search", class: "form-control" %>
    </div>
    <div class="form-group col-md-2">
      <div class="input-group">
        <%= text_field_tag :ship_date_after, params[:ship_date_after], placeholder: "Start ship date", class: "form-control bootstrap-datepicker" %>
        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
      </div>
    </div>
    <div class="form-group col-md-2">
      <div class="input-group">
        <%= text_field_tag :ship_date_before, params[:ship_date_before], placeholder: "End ship date", class: "form-control bootstrap-datepicker" %>
        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
      </div>
    </div>
    <%= hidden_field_tag :status, params[:status] %>
    <%= submit_tag "Search", name: nil, class: "btn btn-default col-md-1" %>
  </div>
<% end %>
