<%= form_tag url_for, method: :get, class: 'form-horizontal search-form' do %>
  <%= hidden_field_tag :status, params[:status] %>
  <div class="form-group">
    <div class="input-group">
      <%= text_field_tag :text_search, params[:text_search], placeholder: "Search", class: "form-control" %>
      <div class="input-group-btn">
        <a data-toggle="collapse" href="#order-search-collapse" class="btn btn-default"><span class="caret"></span></a>
        <%= submit_tag "Search", name: nil, class: "btn btn-default" %>
      </div>
    </div>
  </div>
  <div id="order-search-collapse" class="collapse <%= ' in' if any_searches? %>">
    <div class="form-group">
      <%= label_tag :code_like, "SO#", class: "control-label" %><br/>
      <div class="col-md-12">
        <%= text_field_tag :code_like, params[:code_like], class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag "Date range", nil, class: "control-label" %><br/>
      <div class="col-md-6">
        <%= text_field_tag :ship_date_after, params[:ship_date_after], placeholder: "Start", class: "form-control bootstrap-datepicker" %>
      </div>
      <div class="col-md-6">
        <%= text_field_tag :ship_date_before, params[:ship_date_before], placeholder: "End", class: "form-control bootstrap-datepicker" %>
      </div>
    </div>
  </div>
<% end %>
