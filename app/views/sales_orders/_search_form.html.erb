<%= form_tag sales_orders_path, method: :get, class: 'form-inline search' do %>
  <div class="row">
    <div class="form-group col-md-1">
      <%= text_field_tag :query, params[:query], placeholder: "Search", class: "form-control" %>
    </div>
    <div class="form-group col-md-2">
      <div class="input-group">
        <%= text_field_tag :start_ship_date, params[:start_ship_date], placeholder: "Start ship date", class: "form-control bootstrap-datepicker" %>
        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
      </div>
    </div>
    <div class="form-group col-md-2">
      <div class="input-group">
        <%= text_field_tag :end_ship_date, params[:end_ship_date], placeholder: "End ship date", class: "form-control bootstrap-datepicker" %>
        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
      </div>
    </div>
    <%= hidden_field_tag :status, params[:status] %>
    <%= submit_tag "Search", name: nil, class: "btn btn-default col-md-1" %>
  </div>
<% end %>
