<%= modal_form_for sales_order, url: update_ship_date_sales_order_path do |f| %>
  <div class="modal-header">
    <h4 class="modal-title text-center"><%= sales_order.code %></h4>
  </div>
  <div class="modal-body">
    <div class="form-group">
      <%= f.label :ship_date, "Shipped", class: "col-md-2 control-label" %>
      <div class="col-md-8">
        <div class="input-group">
          <%= f.text_field :ship_date, class: "form-control bootstrap-datepicker", value: Time.zone.today, default: true %>
          <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    <%= link_to cancel_sales_order_path(sales_order), method: :patch, remote: true, id: "salesorder-#{sales_order.id}-cancel", class: "pull-left btn btn-warning" do %>
      Cancel order
    <% end %>
    <%= f.submit "Update", class: "btn btn-success" %>
  </div>
<% end %>
