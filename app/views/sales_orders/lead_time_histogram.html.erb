<script>
  $(function () {
    $('#lead_time_histogram').highcharts({
      chart: {
        type: 'column'
      },
      title: {
        text: false
      },
      legend: {
        enabled: false
      },
      xAxis: {
        title: {
          text: 'Lead days'
        },
        type: 'category',
        categories: <%= raw @histogram.lead_day_range %>
      },
      yAxis: {
        min: 0,
        minTickInterval: 1,
        title: {
          text: 'Orders count'
        }
      },
      series: [{
        name: "Orders",
              data: [
                <% @histogram.data.each do |p| %>
                  {
count: <%= raw p[:count] %>,
       serials: <%= raw p[:serials]
                  },
            <% end %>
              ]
      }]
    });
  });
</script>

<div id="lead_time_histogram" class="chart"></div>
