<% if @user.errors.any? %>
  $('#new_user .error-messages').remove();
  $('#new_user').prepend("<%= j render 'shared/error_messages', object:
                                @user %>");
<% else %>
  $('#user-actions-modal').modal('hide');
  $('.users tbody').prepend("<%= j render 'user', user: @user, row_class: "success"  %>");
<% end %>

